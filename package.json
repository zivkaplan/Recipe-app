{
    "name": "recipe-app",
    "version": "0.1.0",
    "private": true,
    "dependencies": {
        "connect-mongo": "^4.4.1",
        "dotenv": "^10.0.0",
        "express": "^4.17.1",
        "express-session": "^1.17.2",
        "mongoose": "^5.13.9"
    },
    "scripts": {
        "client-install": "npm i --prefix client",
